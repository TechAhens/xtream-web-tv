<!DOCTYPE html>
<html lang="en" data-bs-theme="dark">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Xtream Web TV</title>
    <link rel="icon" href="tv.svg">
    <link rel="stylesheet" href="/bootstrap/css/bootstrap.min.css">
    <link rel="stylesheet" href="/icons/bootstrap-icons.css">
</head>

<body class="d-flex align-items-center py-4">
    <main class="form-signin w-100 m-auto text-center" style="max-width: 330px">
        <div class="text-decoration-none text-light">
            <i class="bi bi-tv fs-1"></i>
            <div class="d-flex flex-column lh-1">
                <span class="fw-bold font-monospace">Xtream</span>
                <span class="text-muted font-monospace">Web TV</span>
            </div>
        </div>
        <form class="py-4 mt-4" method="POST" action="/login">
            <h1 class="h3 mb-3 fw-normal">Please sign in</h1>

            <% if (typeof login_error !=='undefined' ){ %>
                <div class="alert alert-danger" role="alert">
                    Login failed
                </div>
            <%}%>
            <div class="form-floating mb-3">
                <input type="text" class="form-control" id="floatingUsername" name="username"
                    placeholder="Xtream username">
                <label for="floatingUsername">Xtream username</label>
            </div>
            <div class="form-floating mb-3">
                <input type="password" class="form-control" id="floatingPassword" name="password"
                    placeholder="Xtream password">
                <label for="floatingPassword">Xtream password</label>
            </div>

            <button class="btn btn-secondary w-100 py-2" type="submit" id="submitbutton" name="loginbutton"
                value="Login">Sign in</button>
        </form>
    </main>

</body>

</html>